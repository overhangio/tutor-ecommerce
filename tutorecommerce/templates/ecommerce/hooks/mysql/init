mysql -u {{ MYSQL_ROOT_USERNAME }} --password="{{ MYSQL_ROOT_PASSWORD }}" --host "{{ MYSQL_HOST }}" --port {{ MYSQL_PORT }} -e 'GRANT ALL ON {{ ECOMMERCE_MYSQL_DATABASE }}.* TO "{{ ECOMMERCE_MYSQL_USERNAME }}"@"%" IDENTIFIED BY "{{ ECOMMERCE_MYSQL_PASSWORD }}";'